@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/eplSliderLogo.jpg" alt="English Premier League" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn more about the EPL.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More!
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/epl2018Winners.jpg" alt="EPL Teams 2017-18 Season" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    View Last Season's highs and lows.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/eplMSalah.jpg" alt="View 2017-18 Fixtures" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Championship Fixtures.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        @*<div class="item">
            <img src="~/images/banner4.svg" alt="Microsoft Azure" class="img-responsive" />
